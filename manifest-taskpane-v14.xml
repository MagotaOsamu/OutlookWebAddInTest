<?xml version="1.0" encoding="UTF-8"?>
<!-- ルート：Outlook Mail アドイン基本スキーマ -->
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ov="http://schemas.microsoft.com/office/mailappversionoverrides"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="MailApp">

  <!-- 一意の GUID -->
  <Id>5d21f7ce-6d47-4e0a-9e9d-6f3d3e9f4a11</Id>

  <!-- バージョン (X.Y.Z.W) -->
  <Version>1.0.0.0</Version>

  <!-- 発行者 -->
  <ProviderName>OutlookWebAddInTest</ProviderName>

  <!-- 既定ロケール -->
  <DefaultLocale>ja-JP</DefaultLocale>

  <!-- 表示名 -->
  <DisplayName DefaultValue="TEST: Taskpane only (v14)"/>

  <!-- 説明 -->
  <Description DefaultValue="最小タスクペイン。VersionOverridesは/mailappversionoverrides（属性なし）。Hostはxsi:type=MailHost。basictypes使用。"/>

  <!-- 32x32 PNG（実在必須） -->
  <IconUrl DefaultValue="https://black-pebble-05a52b800.1.azurestaticapps.net/icon-32.png"/>

  <!-- 80x80 PNG（実在必須） -->
  <HighResolutionIconUrl DefaultValue="https://black-pebble-05a52b800.1.azurestaticapps.net/icon-80.png"/>

  <!-- サポート URL -->
  <SupportUrl DefaultValue="https://black-pebble-05a52b800.1.azurestaticapps.net/"/>

  <!-- 対象ホスト -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- ルート要件セット（Taskpaneは Mailbox 1.5 で十分） -->
  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox" MinVersion="1.5"/>
    </Sets>
  </Requirements>

  <!-- ★旧スキーマ必須：ItemEdit（Compose相当） -->
  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://black-pebble-05a52b800.1.azurestaticapps.net/index.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- 最小権限 -->
  <Permissions>ReadItem</Permissions>

  <!-- どのフォームで有効にするか（Compose相当＝Edit） -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <!-- 任意 -->
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- ★UI定義は mailappversionoverrides 側。Version/xsi:type 属性なし -->
  <ov:VersionOverrides>
    <!-- ★VersionOverrides 内 Requirements は basictypes 名前空間 -->
    <ov:Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox" MinVersion="1.5"/>
      </bt:Sets>
    </ov:Requirements>

    <ov:Hosts>
      <!-- ★ここが今回の修正点：抽象Hostに具体型を指定 -->
      <ov:Host xsi:type="ov:MailHost">
        <ov:DesktopFormFactor>
          <ov:ExtensionPoint xsi:type="ov:MessageComposeCommandSurface">
            <ov:OfficeTab id="TabDefault">
              <ov:Group id="grp.test" label="TEST">
                <ov:Control xsi:type="ov:Button" id="btnTaskpane" label="Open Taskpane">
                  <!-- アイコンは bt:Image の resid 参照 -->
                  <ov:Icon>
                    <bt:Image resid="icon16"/>
                    <bt:Image resid="icon32"/>
                    <bt:Image resid="icon80"/>
                  </ov:Icon>
                  <!-- Taskpane 表示 -->
                  <ov:Action xsi:type="ov:ShowTaskpane">
                    <ov:SourceLocation resid="taskpaneUrl"/>
                  </ov:Action>
                </ov:Control>
              </ov:Group>
            </ov:OfficeTab>
          </ov:ExtensionPoint>
        </ov:DesktopFormFactor>
      </ov:Host>
    </ov:Hosts>

    <!-- ★Resources も basictypes コレクション -->
    <ov:Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://black-pebble-05a52b800.1.azurestaticapps.net/icon-32.png"/>
        <bt:Image id="icon32" DefaultValue="https://black-pebble-05a52b800.1.azurestaticapps.net/icon-32.png"/>
        <bt:Image id="icon80" DefaultValue="https://black-pebble-05a52b800.1.azurestaticapps.net/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="taskpaneUrl" DefaultValue="https://black-pebble-05a52b800.1.azurestaticapps.net/index.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="residAppName" DefaultValue="TEST: Taskpane only (v14)"/>
      </bt:ShortStrings>
    </ov:Resources>
  </ov:VersionOverrides>

  <!-- 参照許可ドメイン -->
  <AppDomains>
    <AppDomain>https://black-pebble-05a52b800.1.azurestaticapps.net</AppDomain>
  </AppDomains>
</OfficeApp>
