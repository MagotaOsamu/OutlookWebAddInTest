<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <Id>00000000-0000-0000-0000-000000000001</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Sample</ProviderName>
  <DefaultLocale>ja-JP</DefaultLocale>
  <DisplayName DefaultValue="OnSend Minimal Confirm"/>
  <Description DefaultValue="送信時に確認ダイアログを表示するテスト用アドイン"/>
  <IconUrl DefaultValue="https://localhost:3000/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3000/icon-80.png"/>
  <SupportUrl DefaultValue="https://localhost:3000"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- OnMessageSend が使えるのは Mailbox 1.10 以上 -->
  <Requirements>
    <Sets DefaultMinVersion="1.10" Name="Mailbox"/>
  </Requirements>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides Version="1.0"
    xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.10" Name="Mailbox"/>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <LaunchEvents>
          <LaunchEvent Type="OnMessageSend" FunctionName="onMessageSend" SendMode="PromptUser"/>
        </LaunchEvents>
        <FunctionFile resid="FunctionFile.Url"/>
      </Host>
    </Hosts>

    <Resources>
      <bt:Urls>
        <bt:Url id="FunctionFile.Url" DefaultValue="https://localhost:3000/function.html"/>
        <bt:Url id="Dialog.Url" DefaultValue="https://localhost:3000/dialog.html"/>
      </bt:Urls>
    </Resources>

  </VersionOverrides>
</OfficeApp>
